---
import CallPhone from "@icons/CallPhone.astro";
import LogoFB from "@icons/LogoFB.astro";
import { IconDitMapper } from "@utils/iconDitMapper";

interface Props {
  cls1: string;
  cls2: string;
  cls3: string;
  cls4: string;
  phone: string;
  contact: string;
  title: keyof typeof URLText;
}
const { cls1, cls2, cls3, cls4, phone, contact, title } = Astro.props;
const URLText: {
  Transport: string;
  Outsourcing: string;
  Commercial: string;
} = {
  Transport: "Transporte",
  Outsourcing: "Outsourcing",
  Commercial: "Comercial"
};

const Icon = IconDitMapper(title) || (() => null);

---

<h1 class="text-center text-3xl">CONT√ÅCTANOS</h1>
<section
  style={{ backgroundColor: cls1 }}
  class=`flex flex-col md:flex-row items-center w-10/12 md:w-2xl p-4 md:h-40 mx-auto rounded-lg text-white mb-14`
>
  <div class="w-64 md:w-80">
    {Icon && <Icon cls1={cls1} cls2={cls2} cls3={cls3} cls4={cls4} />}
  </div>
  <div
    class="inline-block h-0.5 md:h-32 md:min-h-4 md:w-0.5 self-stretch bg-neutral-100"
  >
  </div>
  <div class="flex flex-col gap-5 p-5 text-xl">
    <a class="flex gap-2 items-center" href=`tel:${phone}`
      ><CallPhone color={cls4} />{phone}</a
    >
    <a class="flex gap-2 items-center" href=`${contact}` target="_blank"
      ><LogoFB cls1={cls1} />DIT {URLText[title]}</a
    >
  </div>
</section>
