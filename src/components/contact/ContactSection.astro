---
import { Image } from "astro:assets";
import contact from "@assets/images/form img.webp";
import FormContact from "./FormContact.astro";
import InfoContact from "./InfoContact.astro";
---

<section class="bg-[#f2f2f2] w-full">
  <div class="flex flex-col md:flex-row gap-0">
    <div class="w-full md:w-1/3 overflow-hidden">
      <Image
        src={contact}
        alt="Contacto"
        width={1280}
        height={600}
        class="w-full h-auto md:h-full object-cover object-left "
      />
    </div>

    <div class="w-full md:w-2/3 flex items-center justify-center p-4">
      <div class="w-full max-w-3xl">
        <FormContact />
      </div>
    </div>
  </div>
</section>

<InfoContact />
<hr class="py-2 w-0 h-0" />
