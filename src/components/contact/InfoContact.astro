---
import { SocialNetworksUrl } from "@data/socialNetworks";
import { Image } from "astro:assets";
import FacebookIcon from "@assets/icons/FB.svg";
import InstagramIcon from "@assets/icons/IG.svg";
import LinkedinIcon from "@assets/icons/Lkin.svg";
import LocationIcon from "@assets/icons/Location.svg";
import WtsAppIcon from "@assets/icons/WtsApp.svg";
import MailIcon from "@assets/icons/Mail.svg";
---

<div class="max-w-7xl mx-auto px-4 my-10 flex flex-col md:flex-row gap-10">
  <div class="md:w-xl">
    <h3 class="text-xl font-bold mb-4">Oficina Central</h3>
    <ul class="space-y-3">
      <li class="flex items-center gap-2">
        <Image src={LocationIcon} alt="Lugar" class="w-5 h-5" />
        <span>Calle 22 de Calacoto #8240</span>
      </li>
      <li class="flex items-center gap-2">
        <Image src={WtsAppIcon} alt="WhatsApp" class="w-5 h-5" />
        <span>(+591) 2792228</span>
      </li>
      <li class="flex items-center gap-2">
        <Image src={MailIcon} alt="Correo" class="w-5 h-5" />
        <span>info@ditgroup.com.bo</span>
      </li>
    </ul>
  </div>

  <div class="md:w-1/2">
    <h3 class="text-xl font-bold mb-4">SÃ­guenos en:</h3>
    <ul class="flex gap-6">
      <li>
        <a target="_blank" href={SocialNetworksUrl.Facebook}>
          <img src={FacebookIcon.src} alt="Facebook" class="w-8" />
        </a>
      </li>
      <li>
        <a target="_blank" href={SocialNetworksUrl.Instagram}>
          <img src={InstagramIcon.src} alt="Instagram" class="w-8" />
        </a>
      </li>
      <li>
        <a target="_blank" href={SocialNetworksUrl.LinkedIn}>
          <img src={LinkedinIcon.src} alt="LinkedIn" class="w-8" />
        </a>
      </li>
    </ul>
  </div>
</div>
