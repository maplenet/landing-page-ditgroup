---
import { footerLinks } from "@data/navLinks";
import { SocialNetworksUrl } from "@data/socialNetworks";
import FacebookIcon from "@assets/icons/FB.svg";
import InstagramIcon from "@assets/icons/IG.svg";
import LinkedinIcon from "@assets/icons/Lkin.svg";
import DitIcon from "@icons/DitIcon.astro";
---

<footer
  class="bg-primary text-white flex flex-col items-center justify-center"
>
  <section class="mx-auto my-0 w-full max-w-7xl">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-16 p-8 pb-0 mx-auto my-0"
    >
      <div>
        <h3 class="text-xl font-bold mb-4">Acerca de DIT</h3>
        <ul class="space-y-2">
          {
            footerLinks["Acerca de DIT"].map((link) => (
              <li>
                <a
                  class="hover:text-light-blue transition-colors duration-300"
                  href={link.href}
                  class="hover:text-octonary"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Servicios Telecom</h3>
        <ul class="space-y-2">
          {
            footerLinks["Servicios Telecom"].map((link) => (
              <li>
                <a
                  class="hover:text-light-blue transition-colors duration-300"
                  href={link.href}
                  class="hover:text-octonary"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Servicios DIT</h3>
        <ul class="space-y-2">
          {
            footerLinks["Servicios DIT"].map((link) => (
              <li>
                <a
                  class="hover:text-light-blue transition-colors duration-300"
                  href={link.href}
                  class="hover:text-octonary"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div
      class="flex flex-wrap items-end justify-between gap-8 p-4 pt-0 text-sm mx-auto my-0"
    >
      <a class="w-32" href="/">
        <DitIcon cls2="white" />
      </a>
      <!-- <ul class="flex items-center justify-center gap-6">
        <li><a class="hover:text-light-blue transition-colors duration-300" href="/legal/terminos">Aviso legal</a></li>
        <li><a class="hover:text-light-blue transition-colors duration-300" href="/legal/privacidad">Protección de datos</a></li>
        <li><a class="hover:text-light-blue transition-colors duration-300" href="/legal/cookies">Política de cookies</a></li>
        <li><a class="hover:text-light-blue transition-colors duration-300" href="/legal/cookies">Canal de denuncias y consultas</a></li>
      </ul> -->
      <ul class="flex gap-10">
        <li>
          <a target="_blank" href={SocialNetworksUrl.Facebook}>
            <img src={FacebookIcon.src} alt="Facebook" class="w-8" />
          </a>
        </li>
        <li>
          <a target="_blank" href={SocialNetworksUrl.Instagram}>
            <img src={InstagramIcon.src} alt="Instagram" class="w-8" />
          </a>
        </li>
        <li>
          <a target="_blank" href={SocialNetworksUrl.LinkedIn}>
            <img src={LinkedinIcon.src} alt="LinkedIn" class="w-8" />
          </a>
        </li>
      </ul>
    </div>
  </section>
  <p class="text-center text-sm mb-4 !text-white">
    Todos los derechos reservados. &copy; {new Date().getFullYear()} - DIT GROUP
  </p>
</footer>
