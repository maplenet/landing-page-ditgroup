---
import Banner from "@components/global/Banner.astro";
import Layout from "@layouts/Layout.astro";
import banner from "@assets/images/Banners DIT Outsourcing.webp";
import InfoDit from "@components/global/InfoDit.astro";
import ServiceDit from "@components/global/ServiceDit.astro";
import { outsourcingService } from "@data/outsourcingService";
import Contact from "@components/global/Contact.astro";
---

<Layout>
  <Banner src={banner} alt="DIT Outsourcing" />
  <InfoDit
    title="¿QUÉ ES DIT OUTSOURCING?"
    description="Nuestra división Outsourcing se ha convertido en un estratégico aliado a la hora de emprender proyectos. Varias empresas se ven envueltas en trámites administrativos para poder habilitar a un recurso nuevo y pierden horas laborales importantes para realizar trabajos inmediatos. Dit Group se encarga de todos los asuntos administrativos, usted sólo de realizar su trabajo."
  />
  <ServiceDit title="SERVICIOS 2025" service={outsourcingService} />
  <Contact
    title="Outsourcing"
    phone="(+591) 777 77 777"
    email="info@ditoutsourcing.com.bo"
    cls1="#3b4049"
    cls2="#ededed"
    cls3="#fff"
    cls4="#f29100"
  />
</Layout>
