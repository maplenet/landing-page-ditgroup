---
import Banner from "@components/global/Banner.astro";
import Layout from "@layouts/Layout.astro";
import banner from "@assets/images/Banners DIT Comercial.webp";
import InfoDit from "@components/global/InfoDit.astro";
import Contact from "@components/global/Contact.astro";
import Categories from "@commercial/Categories.astro";
import { SocialNetworksUrl } from "@data/socialNetworks";
---

<Layout>
  <Banner src={banner} title="Commercial" />
  <InfoDit
    title="¿QUÉ ES DIT COMERCIAL?"
    description="DIT Comercial está dedicada a representar y distribuir marcas internacionales de materiales y equipos para proyectos de ingeniería. Contamos con puntos de venta en el eje troncal y gestionamos la distribución de nuestros productos a nivel nacional."
  />
  <Categories title="CATEGORIAS DE PRODUCTOS" />
  <Contact
    title="Commercial"
    phone={SocialNetworksUrl.Phone}
    contact={SocialNetworksUrl.FacebookCommercial}
    cls1="#e3051f"
    cls2="#ededed"
    cls3="#c4c2d4"
    cls4="#c4c2d4"
  />
</Layout>
